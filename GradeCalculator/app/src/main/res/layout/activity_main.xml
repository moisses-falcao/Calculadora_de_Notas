<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/field1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Grade 1"
        android:text=""
        android:background="@color/gray"
        android:padding="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:inputType="number"
        android:maxLength="2"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/field2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_alignParentRight="true"
        android:hint="Grade 2"
        android:text=""
        android:background="@color/gray"
        android:layout_marginTop="100dp"
        android:layout_marginRight="50dp"
        android:inputType="number"
        android:maxLength="2"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/field3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:hint="Grade 3"
        android:text=""
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/field1"
        android:layout_marginLeft="50dp"
        android:background="@color/gray"
        android:inputType="number"
        android:maxLength="2"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/field4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/gray"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/field2"
        android:layout_marginRight="50dp"
        android:hint="Grade 4"
        android:text=""
        android:inputType="number"
        android:maxLength="5"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/absences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Absences"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/field3"
        android:background="@color/gray"
        android:text=""
        android:inputType="number"
        android:maxLength="2"
        android:gravity="center"
        />

    <Button
        android:id="@+id/bt_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Calculate"
        android:layout_below="@id/absences"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:layout_margin="30dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/dark_gray"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/Result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/bt_calculate"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        />
    

</RelativeLayout>